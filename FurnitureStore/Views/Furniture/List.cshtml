@using FurnitureStore.Models
@using FurnitureStore.HTML
@model  ListViewModel
@{

    ViewBag.Title = "Головна";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div  class="container">

    @foreach (var p in Model.Furnitures)
    {
        <div class="product col-xs-11 col-md-4 col-sm-6 col-lg-4">

            @Html.Partial("Summary", p)
        </div>

    }


</div>



 

    <div class="container">
        <nav aria-label="Navigation" class="text-center">
            <ul class="pagination" style="margin: 0 auto">

                @Html.PageLinks(Model.InfoPages, x => Url.Action("List", new { page = x, category = Model.CurrentCategory }))

            </ul>
        </nav>
    </div>



 <div class="container">
        <div class="row">
            <div class="col-xs-9 col-sm-6 col-lg-12" style="background-color:#f9f9f9; word-wrap:break-word;">
                
                    @if (User.IsInRole("admin"))
                    {
                        @Html.ActionLink("Редагувати", "Edit", "Description", new { id = 1 }, new { @class = "btn btn-primary btn-xs" })
                    }


                    @{
                        Html.RenderAction("Details", "Description", new { id = 1 });
                    }
               
                </div>

            </div>
        </div>







