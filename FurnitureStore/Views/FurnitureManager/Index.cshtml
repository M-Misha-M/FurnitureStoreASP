@model IEnumerable<FurnitureStore.Entities.Furniture>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
   
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">Тип</th>
                <th>Назва</th>
                <th class="text-right">Ціна</th>
                <th class="text-center">Дія</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.Category.Name</td>
                    <td>@Html.ActionLink(item.Name, "Edit", new { item.FurnitureId })</td>
                    <td class="text-right">@item.Price.ToString("#грн")</td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "FurnitureManager"))
                        {
                            @Html.Hidden("FurnitureId", item.FurnitureId)
                            <input type="submit"
                                   class="btn btn-default btn-xs"
                                   value="Видалити" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Додати товар", "Create", null,
            new { @class = "btn btn-default" })
    </div>
</div>