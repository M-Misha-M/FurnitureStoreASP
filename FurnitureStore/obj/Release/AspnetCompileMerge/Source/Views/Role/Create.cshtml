@model FurnitureStore.Models.CreateRoleModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm(FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.ValidationSummary(true, "")
        <p>Назва  ролі:  @Html.EditorFor(model => model.Name , new { htmlAttributes = new { @class = "form-control" } })</p>
        <p>Опис: @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })</p>
        <p><input type="submit" value="Додати" /></p>
    </div>

   
}




