@model IEnumerable<FurnitureStore.Entities.Furniture>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



  

    <div class="panel panel-default">

        <div class="panel-heading">
            <h3>Панель Адміністратора товарів</h3>
        </div>
        <div class="panel-body">
       
            <table class="table table-striped table-condensed table-bordered">

    <tr>
        <th class="text-right">Тип</th>
        <th>Назва</th>
        <th class="text-right">Ціна</th>
        <th class="text-center">Дія</th>
        <th class="text-center">Файли </th>
       
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="text-right">@item.Category.Name</td>
            <td>@Html.ActionLink(item.Name, "Edit", new { id = item.FurnitureId })</td>
            <td class="text-right">@item.Price.ToString("#грн")</td>
            
            <td class="text-center">
                @using (Html.BeginForm("Delete", "Furnitures" , new { furntitureId = item.FurnitureId }))
                {
                    @Html.Hidden("FurnitureId", item.FurnitureId)
                    <input type="submit"
                           class="btn btn-default btn-xs"
                           value="Видалити" />
                }
            </td>

            <td>
                @if (item.Images.Count == 0)
                {
                    <span>No File</span>
                }
                else
                {
                    <span>@item.Images.Count() File(s)</span>
                }
            </td>

            </tr>
    }

    </table>
</div>
        <div class="panel-footer">
            @Html.ActionLink("Додати товар", "Create", null,
            new { @class = "btn btn-default" })
        </div>
    </div>





      
