@model IEnumerable<FurnitureStore.Entities.Category>




@foreach (var link in Model)
{
    <li>
        <a href="@(Url.RouteUrl(new
                 {
                     controller = "Furniture",
                     action = "List" ,
                     category = link.Name
                 } ))">
            @Html.Raw(ViewBag.div) <img class="img-thumbnail" 
                            src="@Url.Action("GetImage", "Furniture",
                new { link.CategoryId})" /><br />@link.Name@Html.Raw(ViewBag.closeDiv)
       </a>
        
    </li>
}

